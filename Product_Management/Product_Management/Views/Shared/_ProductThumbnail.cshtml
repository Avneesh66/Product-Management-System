@model Product_Management.Models.DTO.ProductModel

<div class="card mb-4 shadow-sm">
    <img style="width:100%;height:180px" src="@Model.ImageUrl" class="card-img-top" alt="..." >
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Name) ? "Name is not available" : Model.Name)</h3>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description) ? "Description is not availabe": Model.Description)</p>
        <p class="card-text">₹@(double.IsNaN(Model.Sale_Price) ? "Price is not availabe" : Model.Sale_Price)</p>
        <button type="button" onclick="add(@Model.Id)" class="btn btn-primary">Add to cart</button>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group loat-end ms-auto">
                <a class="btn btn-sm btn-primary m-1" asp-controller="Product" asp-action="EditProduct" asp-route-id="@Model.Id">Edit</a> |
                <a class="btn btn-sm btn-danger m-1" asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@Model.Id">Delete</a>
            </div>
        </div>
    </div>
</div>