@model Product_Management.Models.Domain.Category

@{
    ViewData["Title"] = "AddCategory";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-3 rounded rounded-3 p-4">
            <h3 class="text-info p-2 m-1">Add Category</h3> <form method="post" asp-action="AddCategory">
                <div class="form-check">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name" />
                </div>
                <div>
                    <input type="submit" class="btn btn-sm btn-primary p-2 m-2 float-end" value="Save"/>
                </div>
            </form>
        </div>
    </div>
</div>

